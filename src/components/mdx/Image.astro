---
import { Image as AstroImage, type LocalImageProps } from 'astro:assets'

type Props = LocalImageProps

const { src, alt } = Astro.props
---

<div class="flex justify-center">
  <AstroImage
    {src}
    {alt}
    title={alt}
    width='1366'
    height='768'
    class='w-full md:w-[90%] rounded-sm'
  />
</div>
