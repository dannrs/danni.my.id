---
import { Image } from 'astro:assets'
import { ArrowUpRight } from 'lucide-react'
import { SITE_CONFIG } from '@/constants'
import { Button } from '@/components/ui/button'
---

<section class='flex flex-col items-center justify-center pb-10 pt-2'>
  <Image src='/hero.svg' alt='hero image' width={300} height={300} />
  <h1 class='font-heading text-3xl sm:text-4xl'>{SITE_CONFIG.name}</h1>
  <p class='max-w-lg py-2 text-center text-foreground-3 sm:text-lg'>
    {SITE_CONFIG.description}
  </p>
  <div class='pt-1'>
    <a
      href='https://tjnsy04t49.ufs.sh/f/KPkgaCtvS1XE3rFl3rMybiaUwrlPe4Qopsh62SmgOkND8Gt0'
      target='_blank'
      aria-label='Open CV in new tab'
    >
      <Button size='sm' className='mr-4'>
        Download CV<ArrowUpRight className='ml-1 h-[0.85rem] w-[0.85rem]' />
      </Button>
    </a>
    <a href='/about#contact' aria-label='Go to contact section'>
      <Button variant='outline' size='sm'>Contact</Button>
    </a>
  </div>
</section>
